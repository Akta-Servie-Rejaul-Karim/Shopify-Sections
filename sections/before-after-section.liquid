
<style>
    .before-after-section {
      padding: 80px 20px;
      text-align: center;
      background: #213346;
      background: #213346;
      position: relative;
    }
    .before-after-section__header {
      margin-bottom: 30px;
      }
    .before-after-section__logo {
       max-height: 60px;
       margin-bottom: 20px;
      }


    .before-after-section__headline {
      margin: 0;
      color: #8C2A26;
      text-align: center;
      font-family: Montserrat;
      font-size: 32px;
      font-style: italic;
      font-weight: 800;
      line-height: 120%;
      text-transform: uppercase;
      color: #fbeeda;
    }

    .before-after-section__subheadline {
      margin: 0;
      color: #213347;
      font-family: Montserrat;
      font-size: 32px;
      font-style: normal;
      font-weight: 700;
      line-height: 120%;
      text-transform: uppercase;
      margin-bottom: 20px;
      color: #FBEEDA;
    }
    .before-after-section__description {
      max-width: 800px;
      margin: 0 auto;
      color: #213346;
      text-align: center;
      font-family: 'Montserrat', sans-serif;
      font-size: 20px;
      font-style: normal;
      font-weight: 400;
      line-height: 140%;
      color: #FBEEDA;
    }

    .before-after-slider {
      width:100%;
      max-width: 1350px;
      margin:0 auto;
      }
    .before-after-slider__slide { display:flex; flex-direction:column; align-items:center; padding:10px 0; }

    /* Comparison container */
    .before-after-slider__comparison {
      --ba-percentage: 50%;
      position: relative;
      width: 100%;
      border-radius: 32px;
      overflow: hidden;
      user-select: none;
      touch-action: none;
    }

    /* Base images */
    .before-after-slider__image {
      display: block;
      inset: 0;
      width: 100%;
      height: 100%;
    }

    /* After image: clipped by line */
    .before-after-slider__after {
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
      clip-path: inset(0 calc(100% - var(--ba-percentage)) 0 0);
      pointer-events: none;
    }

    .before-after-slider__label {
        position: absolute;
        top: 20px;
        padding: 7px 15px;
        font-size: 12px;
        font-weight: 600;
        pointer-events: none;
        border-radius: 10px;
        background: #FBEEDA;
        box-shadow: 0 4px 4px 0 rgba(0, 0, 0, 0.25);
        color: #7A1C20;
    }
    .before-after-slider__label--left { left: 20px; }
    .before-after-slider__label--right { right: 20px; }

    /* Draggable handle */
    .before-after-slider__handle {
      position: absolute;
      top: 0;
      bottom: 0;
      left: var(--ba-percentage);
      transform: translateX(-50%);
      z-index: 10;
      width: 44px;
      height: 100%;
      display:flex;
      align-items:center;
      justify-content:center;
      cursor: ew-resize;
      background: transparent;
      border: none;
      padding: 0;
      touch-action: none;
    }
    .before-after-slider__handle-line {
      position:absolute;
      top:0; bottom:0;
      left:50%;
      transform:translateX(-50%);
      width: 4px;
      background:#fff;
    }
  .before-after-slider__handle-knob {
      position: relative;
      width: 32px;
      height: 32px;
      border-radius: 50%;
      z-index: 11;
      background: #F0F0F0;
      display: inline-flex;
      align-items: center;
      justify-content: center;
  }

  .before-after-slider__caption {
      text-align: center;
      margin-top: 25px;
      color: #213346;
      font-family: Montserrat;
      font-size: 22px;
      font-style: normal;
      font-weight: 500;
      line-height: 130%;
      display: flex;
      gap: 8px;
      align-items: center;
      color: #FBEEDA;
  }

  .before-after-slider__caption img {
      width: 24px;
      height: 24px;
      display: block;
  }

  .slider-nav div {
      position: static;
      width: 40px;
      height: 40px;
      background: #fbeeda;
      border-radius: 50%;
  }
  .slider-nav div svg{
    width: 30px;
    height: 30px;
  }

  .before-after-slider__button::after {
    font-size: 20px;
    display: none;
  }

  .slider-nav {
    display: flex;
    justify-content: space-between;
    padding-top: 40px;
  }

    /* Swiper controls */
    .before-after-slider__button { color:#222; }
    .before-after-slider__pagination { margin-top:12px; }

    @media (max-width: 768px) {
      .before-after-section {
        padding: 40px 20px 100px;
      }
      .before-after-section__headline {
        font-size: 22px;
      }
      .before-after-section__subheadline {
        font-size: 20px;
      }
      .before-after-section__description {
        font-size: 16px;
      }
      .before-after-slider__caption {
        font-size: 18px;
      }
      .before-after-section__header {
          margin-bottom: 20px;
      }
      .slider-nav {
        position: absolute;
        bottom: 30px;
        z-index: 999999;
        width: 100%;
        left: 0;
        justify-content: center;
        gap: 30px;
      }


    }
    @media (max-width:400px) {

      .before-after-section__headline {
        font-size: 18px;
      }
      .before-after-section__subheadline {
        font-size: 17px;
      }
      .before-after-section__description {
        font-size: 14px;
      }
      .before-after-slider__caption {
        font-size: 16px;
      }
      .before-after-section__logo {
          margin-bottom: 10px;
      }

    }
</style>

<div class="before-after-section">
  <!-- Header -->
  <div class="before-after-section__header">
    {% if section.settings.logo != blank %}
      <img
        src="{{ section.settings.logo | image_url }}"
        height=""
        width=""
        alt="Logo"
        class="before-after-section__logo"
      >
    {% endif %}
    <h2 class="before-after-section__headline">{{ section.settings.headline }}</h2>
    <h3 class="before-after-section__subheadline">{{ section.settings.subheadline }}</h3>
    <p class="before-after-section__description">{{ section.settings.description }}</p>
    <div class="slider-nav">
      <div class="before-after-slider__button before-after-slider__button--prev swiper-button-prev">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="16"
          height="16"
          fill="currentColor"
          class="bi bi-arrow-left-short"
          viewBox="0 0 16 16"
        >
          <path fill-rule="evenodd" d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5"/>
        </svg>
      </div>
      <div class="before-after-slider__button before-after-slider__button--next swiper-button-next">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="16"
          height="16"
          fill="currentColor"
          class="bi bi-arrow-right-short"
          viewBox="0 0 16 16"
        >
          <path fill-rule="evenodd" d="M4 8a.5.5 0 0 1 .5-.5h5.793L8.146 5.354a.5.5 0 1 1 .708-.708l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L10.293 8.5H4.5A.5.5 0 0 1 4 8"/>
        </svg>
      </div>
    </div>
  </div>

  <!-- Slider -->
  <div class="before-after-slider swiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="before-after-slider__slide swiper-slide">
          <div class="before-after-slider__comparison" style="--ba-percentage:50%;">
            <!-- Before image (always visible) -->
            <img
              class="before-after-slider__image before-after-slider__image--before"
              src="{{ block.settings.before | image_url }}"
              height=""
              width=""
              alt="Before image"
            >

            <!-- After image (clipped by line) -->
            <div class="before-after-slider__after">
              <img
                class="before-after-slider__image before-after-slider__image--after"
                src="{{ block.settings.after | image_url }}"
                alt="After image"
                height=""
                width=""
              >
            </div>

            <!-- Labels -->
            <div class="before-after-slider__label before-after-slider__label--left">Before</div>
            <div class="before-after-slider__label before-after-slider__label--right">After</div>

            <!-- Handle -->
            <button class="before-after-slider__handle" type="button" aria-label="Drag to compare">
              <span class="before-after-slider__handle-line"></span>
              <span class="before-after-slider__handle-knob">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16" fill="none">
                  <path d="M9 2.5C9 2.22386 9.22386 2 9.5 2H10.5C10.7761 2 11 2.22386 11 2.5V3.5C11 3.77614 10.7761 4 10.5 4H9.5C9.22386 4 9 3.77614 9 3.5V2.5ZM5 2.5C5 2.22386 5.22386 2 5.5 2H6.5C6.77614 2 7 2.22386 7 2.5V3.5C7 3.77614 6.77614 4 6.5 4H5.5C5.22386 4 5 3.77614 5 3.5V2.5ZM9 7.5C9 7.22386 9.22386 7 9.5 7H10.5C10.7761 7 11 7.22386 11 7.5V8.5C11 8.77614 10.7761 9 10.5 9H9.5C9.22386 9 9 8.77614 9 8.5V7.5ZM5 7.5C5 7.22386 5.22386 7 5.5 7H6.5C6.77614 7 7 7.22386 7 7.5V8.5C7 8.77614 6.77614 9 6.5 9H5.5C5.22386 9 5 8.77614 5 8.5V7.5ZM9 12.5C9 12.2239 9.22386 12 9.5 12H10.5C10.7761 12 11 12.2239 11 12.5V13.5C11 13.7761 10.7761 14 10.5 14H9.5C9.22386 14 9 13.7761 9 13.5V12.5ZM5 12.5C5 12.2239 5.22386 12 5.5 12H6.5C6.77614 12 7 12.2239 7 12.5V13.5C7 13.7761 6.77614 14 6.5 14H5.5C5.22386 14 5 13.7761 5 13.5V12.5Z" fill="#757575"/>
                </svg>
              </span>
            </button>
          </div>

          <div class="before-after-slider__caption">
            {% if block.settings.caption_icon != blank %}
              <img src="{{ block.settings.caption_icon | image_url }}" width="" height="" alt="icon">
            {% endif %}
            <span>
              {{ block.settings.caption -}}
            </span>
          </div>
        </div>
      {% endfor %}
    </div>

    {% comment %}
      <div class="before-after-slider__pagination swiper-pagination"></div>
    {% endcomment %}
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Init Swiper
    document.querySelectorAll('.before-after-slider').forEach(function (sliderEl) {
      const swiper = new Swiper(sliderEl, {
        loop: true,
        slidesPerView: 1.2,
        spaceBetween: 20,
        breakpoints: {
          400: { slidesPerView: 1.5 },
          600: { slidesPerView: 2.1 },
          768: { slidesPerView: 2.5 },
          1024: { slidesPerView: 3 },
        },
        navigation: {
          nextEl: '.swiper-button-next',
          prevEl: '.swiper-button-prev',
        },
      });
      sliderEl._swiper = swiper;

      // Init comparisons
      sliderEl.querySelectorAll('.before-after-slider__comparison').forEach(function (compEl) {
        initComparison(compEl, swiper);
      });
    });

    function initComparison(compEl, swiper) {
      const handle = compEl.querySelector('.before-after-slider__handle');
      let dragging = false;
      let pointerId = null;

      function setPercentage(pct) {
        pct = Math.max(0, Math.min(100, pct));
        compEl.style.setProperty('--ba-percentage', pct + '%');
      }
      function computePct(clientX) {
        const rect = compEl.getBoundingClientRect();
        return ((clientX - rect.left) / rect.width) * 100;
      }

      function onPointerMove(e) {
        if (!dragging || e.pointerId !== pointerId) return;
        setPercentage(computePct(e.clientX));
      }
      function onPointerUp(e) {
        if (!dragging || e.pointerId !== pointerId) return;
        dragging = false;
        try {
          e.target.releasePointerCapture(pointerId);
        } catch {}
        window.removeEventListener('pointermove', onPointerMove);
        window.removeEventListener('pointerup', onPointerUp);
        window.removeEventListener('pointercancel', onPointerUp);
        if (swiper) swiper.allowTouchMove = true;
      }
      handle.addEventListener('pointerdown', function (e) {
        e.preventDefault();
        dragging = true;
        pointerId = e.pointerId;
        try {
          handle.setPointerCapture(pointerId);
        } catch {}
        window.addEventListener('pointermove', onPointerMove);
        window.addEventListener('pointerup', onPointerUp);
        window.addEventListener('pointercancel', onPointerUp);
        if (swiper) swiper.allowTouchMove = false;
      });
      compEl.addEventListener('click', function (e) {
        if (dragging) return;
        setPercentage(computePct(e.clientX));
      });
      handle.addEventListener('keydown', function (e) {
        const step = 5;
        const current = parseFloat(getComputedStyle(compEl).getPropertyValue('--ba-percentage')) || 50;
        if (e.key === 'ArrowLeft') {
          e.preventDefault();
          setPercentage(current - step);
        }
        if (e.key === 'ArrowRight') {
          e.preventDefault();
          setPercentage(current + step);
        }
      });
      setPercentage(50);
    }
  });
</script>

